<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#61BB4E">

                <TextView
                    style="@style/PoppinsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="GreenFresh"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_image"
            android:layout_width="289dp"
            android:layout_height="385dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:translationZ="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar">

            <ImageView
                android:id="@+id/iv_plant_image"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="220.83dp"
                android:layout_height="373.12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_image" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:translationZ="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/card_view_image"
            app:layout_constraintStart_toStartOf="@id/card_view_image"
            app:layout_constraintEnd_toEndOf="@id/card_view_image">

            <TextView
                style="@style/PoppinsText"
                android:id="@+id/tv_plant_name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@android:color/white"
                tools:text="Daun Hijau" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:translationZ="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/card_name"
            app:layout_constraintStart_toStartOf="@id/card_name"
            app:layout_constraintEnd_toEndOf="@id/card_name">

            <TextView
                style="@style/PoppinsText"
                android:id="@+id/tv_plant_price_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:background="@android:color/white"
                tools:text="Rp 200.000" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:translationZ="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/card_price"
            app:layout_constraintStart_toStartOf="@id/card_price"
            app:layout_constraintEnd_toEndOf="@id/card_price">

            <TextView
                style="@style/PoppinsText"
                android:id="@+id/tv_plant_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:background="@android:color/white"
                tools:text="Tanaman ini berasal dari negara x, merupakan tanaman langka" />
        </com.google.android.material.card.MaterialCardView>

        <Button
            style="@style/PoppinsText"
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#61BB4E"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Update"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_description"
            app:layout_constraintStart_toStartOf="@id/card_description"
            app:layout_constraintEnd_toEndOf="@id/card_description"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
